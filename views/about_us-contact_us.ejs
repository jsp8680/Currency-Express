	<div class="contact">
      <h2>Contact Us</h2>
  <!-- Added action for form -->
<form id="form" method="post" action="/contact">
      <h3>Full Name</h3>
      <div>
        <input id="name" type="text" name="name" required >
        
    </div>
  
      <h4>Email</h4>
      <div>
